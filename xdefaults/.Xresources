!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              true
! Xft.rgba:                   none
Xft.rgba:					rgb
Xft.hinting:                true
! Xft.hintstyle:              hintslight
Xft.hintstyle:              hintfull
Xft.lcdfilter:				lcddefault
Xcursor.theme:				Paper

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt*depth:                32
URxvt*geometry:             90x30
! URxvt.transparent:          true
! URxvt.fading:               85
URxvt*background:				#030508
! URxvt.background:			rgba:0000/0000/0000/aaaa
! URxvt.background:			rgba:0000/0000/0200/c800
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt*loginShell:           true
URxvt*saveLines:            1000
URxvt*internalBorder:       3
URxvt*lineSpace:            0


! Fonts
URxvt*allow_bold:           false
URxvt*font:     xft:Tewi:medium:size=8
URxvt*boldFont: xft:Tewi:bold:size=8

! URxvt.font:                 -*-terminess-medium-r-normal-*-12-120-72-72-c-60-iso8859-1

! URxvt*font: xft:PragmataPro:pixelsize=12 

! URxvt*font:     xft:Terminus:medium:size=10 
! URxvt*boldFont: xft:Terminus:medium:size=10 

! xterm*faceName: xft:Terminus:medium:size=10 

! Fix font space
! URxvt*letterSpace: -1.1 
! URxvt*letterSpace: -1 
URxvt*letterSpace: 1

! Scrollbar
URxvt*scrollStyle:          rxvt
URxvt*scrollBar:            false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! Perl extensions
URxvt*perl-lib:         /usr/lib/urxvt/perl/
URxvt.perl-ext-common:	default,clipboard,keyboard-select,matcher
URxvt.url-launcher: /usr/bin/chromium
URxvt.matcher.button: 1
URxvt.underlineURLs:  True
URxvt.colorUL:	#86a2be



! Cursor
! URxvt.cursorBlink:          true
! URxvt.cursorColor:          #657b83
! URxvt.cursorUnderline:      false

! Pointer
URxvt*pointerBlank:         true

! special
*.foreground: 	#b3b8c4
*.background:	#20242c
*.cursorColor:	#FF8E31


! black
*.color0:       #213146
*.color8:       #505354

! red
*.color1:       #f91930
*.color9:       #ff1b6d

! green
*.color2:       #c9f51c
*.color10:      #93ea00

! yellow
*.color3:       #f4fd22
*.color11:      #ff6600

! blue
*.color4:       #2757d6
*.color12:      #3f78ff

! magenta
*.color5:       #8c54fe
*.color13:      #9e6ffe

! cyan
*.color6:       #38c8b5
*.color14:      #23cfd5

! white
*.color7:       #ccccc6
*.color15:      #f8f8f2


! TABS COLOURS
! URxvt.color0  : #979797
! URxvt.color1  : #000000

! SETTINGS
! URxvt*scrollBar: False
! URxvt*scrollColor: #8FF528
! URxvt*troughColor: #222222
URxvt*secondaryScroll: True
! URxvt*saveLines: 1000
! URxvt*geometry: 78x24
URxvt*cursorUnderline: False
URxvt*cursorColor: #D3D3D3
URxvt*cursorBlink: True
URxvt*underlineColor: #181818
! URxvt*depth: 32
! URxvt*transparent: True
! URxvt*borderColor: #C2FFA0


! TABS SETTINGS
! URxvt.tabbed.tabbar-fg: 1
! URxvt.tabbed.tabbar-bg: 0
! URxvt.tabbed.tab-fg:    1
! URxvt.tabbed.tab-bg:    0

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
rofi.color-window: #1f222d, #1f222d, #000000
rofi.color-normal: #1f222d, #a6d1fa, #383c4a, #7780a1, #d1d4e0
rofi.color-active: #1f222d, #268bd2, #383c4a, #268bd2, #d1d4e0
rofi.color-urgent: #1f222d, #dc322f, #383c4a, #dc322f, #d1d4e0